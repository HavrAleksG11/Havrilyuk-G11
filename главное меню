from tkinter import *

root = Tk()
Button(root, text="Выйти из программы", command=root.destroy).pack()
root.title("Главное Меню")
root.geometry("600x400")

main_menu = Menu()
main_menu.add_cascade(label="Создать запись")
main_menu.add_cascade(label="Найти запись")
main_menu.add_cascade(label="Редактировать запись")
main_menu.add_cascade(label="Удалить запись")

root.config(menu=main_menu)
root.mainloop()



